
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Extended information for application users including roles and personal telemetry.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string" },
        "role": { 
          "type": "string",
          "enum": ["Admin", "User", "Viewer"],
          "description": "The RBAC role of the user."
        },
        "displayName": { "type": "string" },
        "username": { "type": "string" },
        "mobile": { "type": "string" },
        "photoURL": { "type": "string" },
        "bio": { "type": "string" },
        "createdAt": { "type": "number" }
      },
      "required": ["uid", "email", "role"]
    },
    "ChatSession": {
      "title": "Chat Session",
      "description": "Stored chat sessions with settings.",
      "type": "object",
      "properties": {
        "workspaceId": { "type": "string" },
        "title": { "type": "string" },
        "memoryType": { "type": "string", "enum": ["buffer", "summary", "knowledge-graph"] },
        "enabledTools": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{uid}": {
      "schema": "#/backend/entities/UserProfile",
      "description": "User profiles and permissions."
    },
    "/users/{uid}/sessions/{sessionId}": {
      "schema": "#/backend/entities/ChatSession",
      "description": "Persistent chat history for the authenticated user."
    }
  }
}
